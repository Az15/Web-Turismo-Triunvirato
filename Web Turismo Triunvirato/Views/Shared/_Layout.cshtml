<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agencia de Turismo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/carrousel.css" />
    <link rel="stylesheet" href="~/css/login.css" /> </head>
     
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Agencia de Turismo</a>
                <form class="d-flex ms-auto">
                    <input class="form-control me-2" type="search" placeholder="Buscar destinos" aria-label="Buscar" />
                </form>
                <div class="navbar-nav">
                    <div class="user-menu">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button class="btn btn-link nav-link dropdown-toggle" id="userMenuBtn" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 0; border: none; background: none;">
                                    <i class="fas fa-user"></i> @User.Identity.Name
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuBtn">
                                    <li><a class="dropdown-item" href="/Profile/Edit"><i class="fas fa-user-edit"></i> Modificar perfil</a></li>
                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="Logout">
                                            <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <button id="showLoginBtn" class="nav-link btn btn-link" style="padding: 0; border: none; background: none;">
                                <i class="fas fa-user"></i> 
                            </button>
                        }
                    </div>
                    <a class="nav-link" href="/Bookings">
                        <i class="fas fa-book"></i> Reservas
                    </a>
                    <a class="nav-link" href="/Help">
                        <i class="fas fa-question-circle"></i> Ayuda
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <div id="loginModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Iniciar Sesión</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    @await Html.PartialAsync("~/Views/Account/Login.cshtml")
                </div>
            </div>
        </div>
    </div>

    <footer class="text-center mt-4">
        <p>&copy; 2025 Agencia de Turismo</p>
    </footer>

    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login.js"></script>

    <script>
        $(document).ready(function () {
            // Mostrar el modal de login
            if ($("#showLoginBtn").length) {
                $("#showLoginBtn").click(function () {
                    var loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
                    loginModal.show();
                });
            }

            // Forzar la remoción del backdrop al cerrar el modal
            $('#loginModal').on('hidden.bs.modal', function (e) {
                $('.modal-backdrop').remove();
            });
        });
    </script>

</body>
</html>