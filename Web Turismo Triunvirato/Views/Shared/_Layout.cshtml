<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agencia de Turismo</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome para los íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <!-- Tu archivo CSS personalizado -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/carrousel.css" />
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Agencia de Turismo</a>
                <form class="d-flex ms-auto">
                    <input class="form-control me-2" type="search" placeholder="Buscar destinos" aria-label="Buscar" />
                </form>
                <div class="navbar-nav">
                    <a class="nav-link" href="/Account/Login">
                        <i class="fas fa-user"></i> Iniciar sesión
                    </a>
                    <a class="nav-link" href="/Bookings">
                        <i class="fas fa-book"></i> Reservas
                    </a>
                    <a class="nav-link" href="/Help">
                        <i class="fas fa-question-circle"></i> Ayuda
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenedor principal -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center mt-4">
        <p>&copy; 2025 Agencia de Turismo</p>
    </footer>

    <!-- Bootstrap JS y Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
