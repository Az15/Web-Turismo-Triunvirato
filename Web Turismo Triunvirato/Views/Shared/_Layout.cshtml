@model Web_Turismo_Triunvirato.Models.LoginViewModel
<!DOCTYPE html>
<html lang="es">
    
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agencia de Turismo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    

    @* Esto es estilo global(OJO) *@
    <link rel="stylesheet" href="~/css/site.css" />
    @* Estoy practicando para crear el icono por css porque pesa menos, aun no lo logre *@

    @* Si esto solo impacta al login, solo deberia estar en el login, si tiene micro css se tiene que separar en otro archivo como navbar_login o navbar-login o NavbarLogin *@
    <link rel="stylesheet" href="~/css/login.css" />
  
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/Footer.css" />
    <link rel="stylesheet" href="~/css/iconbar.css" />

</head>


<body>
    <header>
        
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-compass"></i> Turismo Triunvirato
                        </a>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="navbar-nav d-flex flex-row">
                            <a class="nav-link me-3" asp-controller="Home" asp-action="Booking">
                                <i class="fas fa-book"></i> Reservas
                            </a>
                            <a class="nav-link" asp-controller="Home" asp-action="SendBox">
                                <i class="fa-solid fa-truck"></i> Encomiendas
                            </a>
                        </div>
                    </div>

                    <div class="search-container">
                        <input class="form-control search-input" type="search" placeholder="Buscar destinos" aria-label="Buscar" />
                        <i class="fas fa-search search-icon"></i>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="navbar-nav d-flex flex-row">
                            <a class="nav-link me-3" asp-controller="Home" asp-action="Help">
                                <i class="fas fa-question-circle"></i> Ayuda
                            </a>
                            <div class="user-menu">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="dropdown">
                                        <button class="btn btn-link nav-link dropdown-toggle" id="userMenuBtn" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-user"></i> @User.Identity.Name
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuBtn">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="EditProfile">
                                                <i class="fas fa-user-edit"></i> Modificar perfil
                                            </a>
                                        </li>
                                            <li>
                                                <form method="post" asp-controller="Account" asp-action="Logout">
                                                    <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <button id="showLoginBtn" class="nav-link btn btn-link">
                                        <i class="fas fa-user"></i> Iniciar sesión
                                    </button>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        
    </header>

    <!--
    Nueva Botonera de prueba
    -->
    <div class="container mt-2">
        <div class="row justify-content-center icon-bar">
            <div class="col-auto">
                <a href="#" class="icon-button" data-section="alojamientos"><i class="fas fa-bed"></i> Alojamientos</a>
            </div>
            <div class="col-auto">
                <a href="#" class="icon-button" data-section="vuelos"><i class="fas fa-plane"></i> Vuelos</a>
            </div>
            <div class="col-auto">
                <a href="#" class="icon-button" data-section="micros"><i class="fas fa-van-shuttle"></i> Micros</a>
            </div>
            <div class="col-auto">
                <a href="#" class="icon-button" data-section="paquetes"><i class="fas fa-suitcase"></i> Paquetes de viaje</a>
            </div>
            <div class="col-auto">
                <a href="#" class="icon-button" data-section="ofertas"><i class="fas fa-tag"></i> Ofertas <span class="badge bg-warning text-dark small">Hot</span></a>
            </div>
            <div class="col-auto">
                <a href="#" class="icon-button" data-section="actividades"><i class="fas fa-map-signs"></i> Actividades</a>
            </div>
            <div class="col-auto">
                <a href="#" class="icon-button" data-section="asistencias"><i class="fas fa-briefcase-medical"></i> Asistencias de viaje</a>
            </div>
            <div class="col-auto">
                <a class="icon-button" asp-controller="Home" asp-action="SendBox" data-section="encomiendas"><i class="fa-solid fa-truck-ramp-box"></i> Encomiendas</a>
            </div>
        </div>

    </div>
    <main class="container-fluid">
        @RenderBody()
    </main>

    <partial name="_LoginModal" />



    <footer class="mi-footer-personalizado py-4 mt-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Contacto</h5>
                        <p><i class="bi bi-telephone-fill"></i> 011-4741-5511</p>
                        <p><i class="bi bi-whatsapp"></i> 011-2229-6405</p>
                        <p><i class="bi bi-envelope-fill"></i> reservas@turismotriunvirato.tur.ar</p>
                        <p><i class="bi bi-geo-fill"></i> Av. Ángel T. De Alvear 2831, Don Torcuato, Buenos Aires</p>
                    </div>
                    <div class="col-md-4 text-center">    
                        <p><i class="fas fa-compass"></i>  Turismo Triunvirato</p>
                        <p class="small">Desde 1993 (Leg. 16274)</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <h5>Síguenos</h5>
                        <a href="https://www.facebook.com/turismo.triunvirato.3" class="btn btn-outline-light btn-sm rounded-circle me-2" target="_blank"><i class="bi bi-facebook"></i></a>
                            <a href="https://www.instagram.com/turismotriunvirato/" class="btn btn-outline-light btn-sm rounded-circle me-2" target="_blank"><i class="bi bi-instagram"></i></a>
                            @* <a href="#" class="btn btn-outline-light btn-sm rounded-circle"><i class="bi bi-twitter"></i></a> *@
                    </div> 
                </div>
                <hr class="mt-4">
   @*          <div class="gps-icon"></div> *@
                <p class="text-center small">© 2025 Agencia de Turismo - Todos los derechos reservados</p>
            </div>
        </footer>







    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
      <script src="~/js/iconbar.js"></script>  
    
    <script>
        $(document).ready(function () {
            // Mostrar el modal de login
            if ($("#showLoginBtn").length) {
                $("#showLoginBtn").click(function () {
                    var loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
                    loginModal.show();
                });
            }

            // Forzar la remoción del backdrop al cerrar el modal
            $('#loginModal').on('hidden.bs.modal', function (e) {
                $('.modal-backdrop').remove();
            });
        });
    </script>

</body>
</html>

