@model Web_Turismo_Triunvirato.Models.WhatsappMessage

@{
    ViewData["Title"] = "Editar Mensaje de WhatsApp";
}

<h2 class="mt-4">@ViewData["Title"]</h2>
<p>Edite los campos necesarios para actualizar la plantilla de mensaje.</p>

<div class="row">
    <div class="col-md-8">
        <form asp-action="EditWhatsappMessage" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" required>
                <small class="form-text text-muted">Ejemplo: "Mensaje de confirmación de reserva".</small>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Message_Template"></label>
                <textarea asp-for="Message_Template" class="form-control" rows="5" required></textarea>
                <small class="form-text text-muted">Use @@variable para los datos a reemplazar (ej: Hola @@cliente, tu vuelo a @@destino).</small>
            </div>
            <div class="form-check mt-3">
                <input type="checkbox" asp-for="Is_Active" class="form-check-input">
                <label class="form-check-label" asp-for="Is_Active"></label>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-whatsapp"><i class="fas fa-save me-2"></i>Guardar Cambios</button>
                <a asp-action="AdminWhatsappMessages" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}