@using Web_Turismo_Triunvirato.Models
@model IEnumerable<BusPromotion>

@{
    ViewData["Title"] = "Gestionar Promociones de Buses";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <p>
        <a asp-action="AltaPromotionBus" class="btn btn-success">Crear Nueva Promoción de Bus</a>
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tipo de Servicio</th>
                <th>Descripción</th>
                <th>Destino</th>
                <th>Origen</th>
                <th>Compañía de Bus</th>
                <th>Categoría</th>
                <th>Precio Original</th>
                <th>Precio Oferta</th>
                <th>Descuento</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>Bus</td>
                    <td>@item.Description</td>
                    <td>@item.DestinationName</td>
                    <td>@item.OriginName</td>
                    <td>@item.BusCompanyName</td>
                    <td>@item.Category</td>
                    <td>@item.OriginalPrice.ToString("C")</td>
                    <td>@item.OfferPrice.ToString("C")</td>
                    <td>@item.DiscountPercentage%</td>
                    <td>@item.StartDate.ToString("d")</td>
                    <td>@item.EndDate.ToString("d")</td>
                    <td>@(item.IsActive ? "Sí" : "No")</td>
                    <td>
                        <a asp-action="EditPromotionBus" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a>
                        <form asp-controller="Admin" asp-action="DeletePromotionBus" method="post" style="display:inline-block;">
                            <input type="hidden" name="id" value="@item.Id" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar esta promoción?');">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-action="Buses" class="btn btn-secondary">Volver a Administración de Buses</a>
    </div>
</div>