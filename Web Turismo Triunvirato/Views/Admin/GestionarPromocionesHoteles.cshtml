@model IEnumerable<Web_Turismo_Triunvirato.Models.Promotion>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Gestionar Promociones";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <p>
        @if (ViewData["Title"]?.ToString().Contains("Vuelos") == true)
        {
            <a asp-action="AltaPromocion" class="btn btn-success">Crear Nueva Promoción de Vuelo</a>
        }
        else if (ViewData["Title"]?.ToString().Contains("Hoteles") == true)
        {
            <a asp-action="AltaPromocionHotel" class="btn btn-success">Crear Nueva Promoción de Hotel</a>
        }
        else
        {
            <a asp-action="AltaPromocion" class="btn btn-success">Crear Nueva Promoción</a>
        }
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ServiceType)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.DestinationName)</th>
                @* Campo condicional: OriginName para vuelos, Stars para hoteles *@
                @if (Model.FirstOrDefault()?.ServiceType == Web_Turismo_Triunvirato.Models.ServiceType.Vuelos)
                {
                    <th>@Html.DisplayNameFor(model => model.OriginName)</th>
                }
                else if (Model.FirstOrDefault()?.ServiceType == Web_Turismo_Triunvirato.Models.ServiceType.Hoteles)
                {
                    @* <th>@Html.DisplayNameFor(model => model.Stars)</th> *@
                }

                <th>@Html.DisplayNameFor(model => model.OriginalPrice)</th>
                <th>@Html.DisplayNameFor(model => model.OfferPrice)</th>
                <th>@Html.DisplayNameFor(model => model.DiscountPercentage)</th>
                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ServiceType)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.DestinationName)</td>
                    @if (item.ServiceType == Web_Turismo_Triunvirato.Models.ServiceType.Vuelos)
                    {
                        <td>@Html.DisplayFor(modelItem => item.OriginName)</td>
                    }
                    else if (item.ServiceType == Web_Turismo_Triunvirato.Models.ServiceType.Hoteles)
                    {
                        @* <td>@Html.DisplayFor(modelItem => item.Stars)</td> *@
                    }

                    <td>@Html.DisplayFor(modelItem => item.OriginalPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.OfferPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiscountPercentage)%</td>
                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td>@(item.IsActive ? "Sí" : "No")</td>
                    <td>
                        <a asp-action="EditarPromocion" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a> |
                        <a asp-action="BajaPromocion" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-4">
        @if (ViewData["Title"]?.ToString().Contains("Vuelos") == true)
        {
            <a asp-action="Vuelos" class="btn btn-secondary">Volver a Vuelos</a>
        }
        else if (ViewData["Title"]?.ToString().Contains("Hoteles") == true)
        {
            <a asp-action="Hoteles" class="btn btn-secondary">Volver a Hoteles</a>
        }
        else
        {
            <a asp-action="Index" class="btn btn-secondary">Volver al Panel</a>
        }
    </div>
</div>