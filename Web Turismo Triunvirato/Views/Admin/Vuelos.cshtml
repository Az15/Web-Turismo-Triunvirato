@{
    ViewData["Title"] = "Administración de Vuelos";
}

<h2 class="mt-4">@ViewData["Title"]</h2>
<p>Desde aquí gestionarás las promociones y precios de vuelos.</p>

<div class="row mt-4">
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm text-center">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <a asp-controller="Admin" asp-action="AltaPromocion" class="text-decoration-none d-block w-100 h-100 d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-plus-circle fa-4x text-success mb-3"></i>
                    <h5 class="card-title text-dark">Alta de Promociones de Vuelo</h5>
                    <p class="card-text text-muted">Agrega nuevas ofertas y precios para vuelos.</p>
                </a>
            </div>
        </div>
    </div>

    
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm text-center">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <a asp-controller="Admin" asp-action="AdminPromotionFlights" class="text-decoration-none d-block w-100 h-100 d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-pencil-alt fa-4x text-primary mb-3"></i>
                    <h5 class="card-title text-dark">Modificar Promociones de Vuelo</h5>
                    <p class="card-text text-muted">Edita promociones existentes.</p>
                </a>
            </div>
        </div>
    </div>

    
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm text-center">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <a asp-controller="Admin" asp-action="ListFlightPromotions" class="text-decoration-none d-block w-100 h-100 d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-list fa-4x text-secondary mb-3"></i>
                    <h5 class="card-title text-dark">Ver Todas las Promociones</h5>
                    <p class="card-text text-muted">Lista todas las promociones</p>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver al Panel de Administración</a>
</div>