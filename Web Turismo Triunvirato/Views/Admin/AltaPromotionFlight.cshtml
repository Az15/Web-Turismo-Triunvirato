@model Web_Turismo_Triunvirato.Models.FlightPromotion

@{
    var action = Model.Id == 0 ? "SubmitPromotionFlight" : "EditPromotionFlight";
    ViewData["Title"] = Model.Id == 0 ? "Alta de Promoción de Vuelo" : "Editar Promoción de Vuelo";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="card p-4">
@*         <form asp-action="SubmitPromotionFlight">
            @Html.AntiForgeryToken()

 *@

        <form asp-controller="Admin" asp-action="@action" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* <input type="hidden" asp-for="Id" /> *@
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="ServiceType" class="form-label">Tipo de Servicio:</label>
                <input value="@Model.ServiceType.ToString()" class="form-control" readonly />
                <input type="hidden" asp-for="ServiceType" />
            </div>

            <div class="mb-3">
                <label asp-for="DestinationName" class="form-label"></label>
                <input asp-for="DestinationName" class="form-control" />
                <span asp-validation-for="DestinationName" class="text-danger"></span>
            </div>

        
                <div class="mb-3">
                    <label asp-for="OriginName" class="form-label"></label>
                    <input asp-for="OriginName" class="form-control" />
                    <span asp-validation-for="OriginName" class="text-danger"></span>
                </div>
            
           
                <div class="mb-3">
                    <label asp-for="Stars" class="form-label"></label>
                    <input asp-for="Stars" type="number" min="1" max="5" class="form-control" />
                    <span asp-validation-for="Stars" class="text-danger"></span>
                </div>
            

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Ej: ~/img/Bariloche.jpg" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsHotWeek" type="checkbox" class="form-check-input" />
                <label asp-for="IsHotWeek" class="form-check-label"></label>
            </div>

            <hr />
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Whatsapp_Id" class="form-label">Mensaje de WhatsApp:</label>
                <select asp-for="Whatsapp_Id" class="form-control" asp-items="ViewBag.WhatsappMessages">
                    <option value="">-- Seleccione un mensaje --</option>
                </select>
                <span asp-validation-for="Whatsapp_Id" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="OriginalPrice" class="form-label"></label>
                <input asp-for="OriginalPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="OriginalPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="OfferPrice" class="form-label"></label>
                <input asp-for="OfferPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="OfferPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar Promoción</button>

            @* El botón de volver es dinámico según el tipo de servicio *@
@*             @if (Model.ServiceType == Web_Turismo_Triunvirato.Models.ServiceType.Vuelos)
            {
                <a asp-action="Vuelos" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a Vuelos</a>
            }
            else if (Model.ServiceType == Web_Turismo_Triunvirato.Models.ServiceType.Hoteles)
            {
                <a asp-action="Hoteles" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a Hoteles</a>
            }
            else
            {
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver al Panel</a>
            } *@
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}