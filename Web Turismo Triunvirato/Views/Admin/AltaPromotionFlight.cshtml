@model Web_Turismo_Triunvirato.Models.FlightPromotion

@{
    ViewData["Title"] = "Crear o Editar Promoción de Vuelo";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="EditPromotionFlight" enctype="multipart/form-data" method="post">
        @* Agregamos el campo oculto para el ID en caso de edición *@
        @if (Model.Id > 0)
        {
            <input type="hidden" asp-for="Id" />
        }

     

        @* Campo oculto para la URL de la imagen existente, si no se sube una nueva *@
        <input type="hidden" asp-for="ImageUrl" />

        @* Campos de tu formulario existentes *@
        <div class="form-group mb-3">
            <label asp-for="Whatsapp_Id" class="form-label"></label>
            <input asp-for="Whatsapp_Id" class="form-control" />
            <span asp-validation-for="Whatsapp_Id" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ServiceType" class="form-label"></label>
            <input asp-for="ServiceType" class="form-control" />
            <span asp-validation-for="ServiceType" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
            <div class="mb-3">
                <label asp-for="Whatsapp_Id" class="form-label">Mensaje de WhatsApp:</label>
                <select asp-for="Whatsapp_Id" class="form-control" asp-items="ViewBag.WhatsappMessages">
                    <option value="">-- Seleccione un mensaje --</option>
                </select>
                <span asp-validation-for="Whatsapp_Id" class="text-danger"></span>
            </div>
        <div class="form-group mb-3">
            <label asp-for="DestinationName" class="form-label"></label>
            <input asp-for="DestinationName" class="form-control" />
            <span asp-validation-for="DestinationName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="OriginName" class="form-label"></label>
            <input asp-for="OriginName" class="form-control" />
            <span asp-validation-for="OriginName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="OriginalPrice" class="form-label"></label>
            <input asp-for="OriginalPrice" class="form-control" />
            <span asp-validation-for="OriginalPrice" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="OfferPrice" class="form-label"></label>
            <input asp-for="OfferPrice" class="form-control" />
            <span asp-validation-for="OfferPrice" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DiscountPercentage" class="form-label"></label>
            <input asp-for="DiscountPercentage" class="form-control" />
            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsHotWeek" class="form-check-input" />
            <label asp-for="IsHotWeek" class="form-check-label"></label>
        </div>

     
        <div class="form-group mb-3">
            <label asp-for="ImageUrl" class="form-label">Seleccionar Imagen</label>
            <input asp-for="ImageUrl" type="file" class="form-control" accept="image/*" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

 
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mb-3">
                <img src="@Model.ImageUrl" alt="Imagen actual" class="img-thumbnail" style="max-height: 200px;" />
            </div>
        }


        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Stars" class="form-label"></label>
            <input asp-for="Stars" class="form-control" />
            <span asp-validation-for="Stars" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>
