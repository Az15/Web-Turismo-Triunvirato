@model Web_Turismo_Triunvirato.Models.View_Index_DestinationCarouselItem

@{
    ViewData["Title"] = "Crear Imagen de Carrusel";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate de que el layout sea correcto
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Crear Nueva Imagen de Carrusel</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateCarrouselItem" method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label asp-for="ImageUrl" class="form-label">Subir Imagen</label>
                            <input asp-for="ImageUrl" type="file" class="form-control" name="imageFile" required />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="AltText" class="form-label">Texto Alternativo</label>
                            <input asp-for="AltText" class="form-control" required />
                            <span asp-validation-for="AltText" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Título</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="LinkUrl" class="form-label">URL del Enlace</label>
                            <input asp-for="LinkUrl" class="form-control" />
                            <span asp-validation-for="LinkUrl" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" checked />
                            <label asp-for="IsActive" class="form-check-label">Activa</label>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Crear</button>
                            <a asp-action="AdminCarrouselItem" class="btn btn-secondary mt-2">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>