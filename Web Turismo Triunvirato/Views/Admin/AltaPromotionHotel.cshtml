@model Web_Turismo_Triunvirato.Models.HotelPromotion

@{
    var action = Model.Id == 0 ? "SubmitPromotionHotel" : "EditPromotionHotel";
    ViewData["Title"] = Model.Id == 0 ? "Alta de Promoción de Hotel" : "Editar Promoción de Hotel";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="card p-4">
        <form asp-controller="Admin" asp-action="@action" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            @* <input type="hidden" asp-for="ServiceType" /> *@

            <div class="mb-3">
                <label asp-for="ServiceType" class="form-label">Tipo de Servicio:</label>
                <input value="@Model.ServiceType.ToString()" class="form-control" readonly />
                <input type="hidden" asp-for="ServiceType" />
            </div>

            <div class="mb-3">
                <label asp-for="DestinationName" class="form-label"></label>
                <input asp-for="DestinationName" class="form-control" />
                <span asp-validation-for="DestinationName" class="text-danger"></span>
            </div>

@*             <div class="mb-3">
                <label asp-for="HotelName" class="form-label"></label>
                <input asp-for="HotelName" class="form-control" />
                <span asp-validation-for="HotelName" class="text-danger"></span>
            </div> *@

            <div class="mb-3">
                <label asp-for="Stars" class="form-label"></label>
                <input asp-for="Stars" type="number" min="1" max="5" class="form-control" />
                <span asp-validation-for="Stars" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="form-label">Seleccionar Imagen</label>
                <input asp-for="ImageUrl" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>


            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-3">
                    <img src="@Model.ImageUrl" alt="Imagen actual" class="img-thumbnail" style="max-height: 200px;" />
                </div>
            }

            <div class="mb-3 form-check">
                <input asp-for="IsHotWeek" class="form-check-input" />
                <label asp-for="IsHotWeek" class="form-check-label"></label>
            </div>

            <hr />

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="OriginalPrice" class="form-label"></label>
                <input asp-for="OriginalPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="OriginalPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="OfferPrice" class="form-label"></label>
                <input asp-for="OfferPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="OfferPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar Promoción</button>
            <a asp-action="AdminPromotionHotels" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a Hoteles</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}