@{
    ViewData["Title"] = "Bienvenido";
}

<head>


    <link rel="stylesheet" href="~/css/carrousel.css" />
    <link rel="stylesheet" href="~/css/package.css" />

</head>


<div id="mainCarousel" class="carousel slide mt-3" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/Destino1.jpg" class="d-block w-100" alt="Cordoba">
            <div class="carousel-caption d-flex flex-column justify-content-end h-100">
                <h5>Cordoba</h5>
                <p><a href="#">Más información</a></p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/img/Destino2.jpg" class="d-block w-100" alt="Viniedos Mendocinos">
            <div class="carousel-caption d-flex flex-column justify-content-end h-100">
                <h5>Mendoza</h5>
                <p><a href="#">Más información</a></p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>



<div class="container mt-4">
    <h2>Paquetes más vendidos</h2>
    <div class="row flex-nowrap overflow-auto mt-4">

        <div class="col-md-4">
            <div class="card rounded-3 shadow-sm d-flex flex-row">
                <img src="~/img/CatarataIguazu.png" class="card-img-left rounded-start-3" alt="Esto es una prueba" style="width: 150px; height: 120px; object-fit: cover;">
                <div class="card-body d-flex flex-column justify-content-between p-3">
                    <div>
                        <h6 class="card-subtitle text-muted small">IDA Y VUELTA</h6>
                        <h5 class="card-title mb-0">Cataratas de Iguazu</h5>
                        <p class="card-text small mt-2">
                            <span class="fw-bold">$410.000,00</span><br>
                            Desde Buenos Aires
                        </p>
                    </div>
                    <a href="#" class="btn btn-primary btn-sm w-100">Ver más</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card rounded-3 shadow-sm d-flex flex-row">
                <img src="~/img/Bariloche.png" class="card-img-left rounded-start-3" alt="Esto es una prueba" style="width: 150px; height: 120px; object-fit: cover;">
                <div class="card-body d-flex flex-column justify-content-between p-3">
                    <div>
                        <h6 class="card-subtitle text-muted small">IDA Y VUELTA</h6>
                        <h5 class="card-title mb-0">Bariloche</h5>
                        <p class="card-text small mt-2">
                            <span class="fw-bold">$580.000,00</span><br>
                            Desde Buenos Aires
                        </p>
                    </div>
                    <a href="#" class="btn btn-primary btn-sm w-100">Ver más</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card rounded-3 shadow-sm d-flex flex-row">
                <img src="~/img/Camboriu.png" class="card-img-left rounded-start-3" alt="Esto es una prueba" style="width: 150px; height: 120px; object-fit: cover;">
                <div class="card-body d-flex flex-column justify-content-between p-3">
                    <div>
                        <h6 class="card-subtitle text-muted small">IDA Y VUELTA</h6>
                        <h5 class="card-title mb-0">Camboriú Brasil</h5>
                        <p class="card-text small mt-2">
                            <span class="fw-bold"> $720.000,00 </span><br>
                            Desde Buenos Aires
                        </p>
                    </div>
                    <a href="#" class="btn btn-primary btn-sm w-100">Ver más</a>
                </div>
            </div>
        </div>

    </div>
</div>



