@model IEnumerable<Web_Turismo_Triunvirato.Models.ActivitiesPromotion>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Actividades en Vacaciones";
}

<link rel="stylesheet" href="~/css/Activities.css" />

<div class="header-activities d-flex align-items-center justify-content-center">
    <img src="~/img/actividades/test1.png" alt="Actividades en Vacaciones" class="header-background-image" />
    <div class="header-content text-white text-center">
        <h1 class="display-4 fw-bold animate-in">¡Las mejores actividades para las mejores vacaciones!</h1>
        <p class="lead mt-3 animate-in-delay">Descubre experiencias inolvidables en tu próximo destino.</p>
    </div>
</div>

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="mb-3">Encuentra tu próxima aventura</h2>
        </div>
        <div class="col-md-3">
            <select id="locationFilter" class="form-select">
                <option value="">Filtrar por Ubicación</option>
                <!-- Generar opciones de ubicación dinámicamente con una comprobación de nulidad -->
                @if (Model != null)
                {
                    @foreach (var location in Model.Select(a => a.Location).Distinct())
                    {
                        <option value="@location.ToLower()">@location</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <div class="input-group">
                <input type="text" id="activitySearch" class="form-control" placeholder="Buscar actividad..." />
                <button class="btn btn-primary" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>

    <div id="activitiesList" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var activity in Model)
            {
                <!-- Se ha modificado el div para que sea un enlace a la información de la actividad -->
                <a href="@($"https://wa.me/+541122296405?text=Hola, te hablo de la web, me interesaria tener mas informacion de {activity.Title} que vi en la web")" target="_blank" class="col activity-card" data-location="@activity.Location.ToLower()">
                    <div class="card h-100">
                        <img src="@activity.ImageUrl" class="card-img-top" alt="@activity.Title" onerror="this.onerror=null; this.src='https://via.placeholder.com/400x250.png?text=Imagen+no+disponible';" />
                        <div class="card-body">
                            <h5 class="card-title">@activity.Title</h5>
                            <p class="card-text">@activity.Description</p>
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="alert alert-info">No hay actividades disponibles en este momento.</p>
            </div>
        }
    </div>
</div>

<script src="~/js/Activities.js"></script>
