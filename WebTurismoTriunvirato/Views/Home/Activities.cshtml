@using Web_Turismo_Triunvirato.Models.ViewModels
@model IEnumerable<Web_Turismo_Triunvirato.Models.ActivitiesPromotion>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Actividades en Vacaciones";
}

<link rel="stylesheet" href="@Url.Content("~/css/Activities.css")" />

<div class="header-activities d-flex align-items-center justify-content-center">
    <img src="@Url.Content("~/img/Actividades/Test1.png")" alt="Actividades en Vacaciones" class="header-background-image" />
    <div class="header-content text-white text-center">
        <h1 class="display-4 fw-bold animate-in">¡Las mejores actividades para las mejores vacaciones!</h1>
        <p class="lead mt-3 animate-in-delay">Descubre experiencias inolvidables en tu próximo destino.</p>
    </div>
</div>

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="mb-3">Encuentra tu próxima aventura</h2>
        </div>
        <div class="col-md-3">
            <select id="locationFilter" class="form-select">
                <option value="">Filtrar por Ubicación</option>
                @if (Model != null)
                {
                    @foreach (var location in Model.Select(a => a.Location).Distinct())
                    {
                        <option value="@location.ToLower()">@location</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <div class="input-group">
                <input type="text" id="activitySearch" class="form-control" placeholder="Buscar actividad..." />
                <button class="btn btn-primary" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
    <div id="activitiesList" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var activity in Model)
            {
                var modalVM = new ModalContratoViewModel
                {
                    IdItem = activity.Id,
                    Title = activity.Title,
                    ImageUrl = Url.Content(activity.ImageUrl),
                    GaleriaImagenes = activity.ImagenesAdicionales, // Pasamos la galería
                    LongDescription = $"<strong>📍 {activity.Location}</strong><br/><br/>{activity.Description}",
                    RenderedWhatsappMessage = activity.RenderedWhatsappMessage
                };

                var modalTargetId = $"packageModal-{activity.Id}";

                <div class="col activity-card" data-location="@activity.Location.ToLower()">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content(activity.ImageUrl)" class="card-img-top" alt="@activity.Title" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@activity.Title</h5>
                            <button type="button" class="btn btn-outline-primary mt-2"
                                    data-bs-toggle="modal"
                                    data-bs-target="#@modalTargetId">
                                Ver Galería y Detalles
                            </button>
                        </div>
                    </div>
                </div>

                @await Html.PartialAsync("_MasInformacionGenerico", modalVM)
            }
        }
        else
        {
            <p class="col-12 alert alert-info text-center">No hay actividades disponibles en este momento.</p>
        }
    </div>
</div>
<script src="@Url.Content("~/js/Activities.js")"></script>
