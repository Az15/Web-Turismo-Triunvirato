@* @model Web_Turismo_Triunvirato.Models.LoginViewModel *@
<!DOCTYPE html>
<html lang="es">
    
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agencia de Turismo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    

    @* Esto es estilo global(OJO) *@
    <link rel="stylesheet" href="~/css/site.css" />
    @* Estoy practicando para crear el icono por css porque pesa menos, aun no lo logre *@

    @* Si esto solo impacta al login, solo deberia estar en el login, si tiene micro css se tiene que separar en otro archivo como navbar_login o navbar-login o NavbarLogin *@

    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/Footer.css" />
    <link rel="stylesheet" href="~/css/iconbar.css" />

</head>


<body>
    <header>
        
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                      
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <img src="/Recurso4_4x.png" alt="" class="icono-personalizado"> @* Turismo Triunvirato *@
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand" asp-controller="Admin" asp-action="Index">
                            <img src="/Recurso4_4x.png" alt="" class="icono-personalizado"> @* Turismo Triunvirato *@
                        </a>
                    }



                    </div>


                    <div class="d-flex align-items-center">
                        <div class="navbar-nav d-flex flex-row">
                            <a class="nav-link me-3" asp-controller="Home" asp-action="Help">
                                <i class="fas fa-question-circle"></i> Ayuda
                            </a>
                            <div class="user-menu">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="dropdown">
                                        <button class="btn btn-link nav-link dropdown-toggle" id="userMenuBtn" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-user"></i> @User.Identity.Name
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuBtn">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="EditProfile">
                                                <i class="fas fa-user-edit"></i> Modificar perfil
                                            </a>
                                        </li>
                                        @* ***** INICIO DEL CAMBIO ***** *@
                                        @if (User.IsInRole("Admin")) // <--- Esta condición es la clave
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                                    <i class="fas fa-cog"></i> Menu Admin
                                                </a>
                                            </li>
                                        }
                                        @* ***** FIN DEL CAMBIO ***** *@
                                            <li>
                                                <form method="post" asp-controller="Account" asp-action="Logout">
                                                    <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                }
                                else
                                {

                                <a class="nav-link btn btn-link" asp-controller="Account"  asp-action="Login">
                                        <i class="fas fa-user"></i> Iniciar sesión
                                </a>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        
    </header>

 

