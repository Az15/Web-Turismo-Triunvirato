@model Web_Turismo_Triunvirato.Models.ViewModels.ModalContratoViewModel

<div class="container-fluid p-0">
    @* Contenedor base para asegurar ancho total *@
    <div class="px-3 pb-3">
        <h5 class="mb-3 text-center text-primary">Reserva para: @Model.Title</h5>

        <div class="alert alert-info py-2 small mb-4 text-center">
            <i class="fas fa-info-circle"></i> Se adjuntarán los detalles de: <strong>@Model.Title</strong>
        </div>

        <form id="consultaMailForm" asp-controller="Contacto" asp-action="FormularioConsulta" method="post" data-id="@Model.IdItem">
            @Html.AntiForgeryToken()
            <input type="hidden" name="PackageDetailsSerialized" value="@Model.PackageDetailsSerialized" />
            <input type="hidden" name="Title" value="@Model.Title" />
            <input type="hidden" name="DestinyId" value="@Model.IdItem" />

            <div class="card border-0 bg-light mb-4 shadow-sm w-100">
                <div class="card-body">
                    <h6 class="text-secondary border-bottom pb-2 mb-3 text-center text-md-start">
                        <i class="fas fa-user-tie"></i> Responsable de la Reserva
                    </h6>
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="small fw-bold">Nombre Completo</label>
                            <input type="text" name="Name" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-12 mb-3">
                            <label class="small fw-bold">DNI</label>
                            <input type="text" name="DocumentoResponsable" class="form-control form-control-sm" placeholder="Número de documento" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="small fw-bold">Email</label>
                            <input type="email" name="Email" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="small fw-bold">Teléfono / WhatsApp</label>
                            <input type="tel" name="Phone" class="form-control form-control-sm" required />
                        </div>

                    </div>
                </div>
            </div>

            <div class="mb-3">
                <h6 class="text-secondary border-bottom pb-2 mb-3 text-center text-md-start">
                    <i class="fas fa-users"></i> Datos de los Pasajeros
                </h6>
                <div id="pasajeros-container-@Model.IdItem" class="w-100">
                    <div class="pasajero-row card shadow-sm p-3 mb-3 border-start border-primary border-4 w-100">
                        <h6 class="text-primary small fw-bold mb-3">Pasajero #1</h6>
                        <div class="row">
                            <div class="col-12 mb-2">
                                <label class="ultra-small text-muted">Nombre y Apellido</label>
                                <input type="text" name="Pasajeros[0].NombreCompleto" class="form-control form-control-sm" placeholder="Nombre completo" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <label class="ultra-small text-muted">DNI / Pasaporte</label>
                                <input type="text" name="Pasajeros[0].Dni" class="form-control form-control-sm" placeholder="Número" required />
                            </div>
                            <div class="col-md-6 mb-2">
                                <label class="ultra-small text-muted">Fecha de Nacimiento</label>
                                <input type="date" name="Pasajeros[0].FechaNacimiento" class="form-control form-control-sm" required />
                            </div>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-outline-success btn-sm w-100" onclick="agregarPasajero(@Model.IdItem)">
                    <i class="fas fa-plus-circle"></i> Agregar acompañante
                </button>
            </div>

            <div class="mt-4">
                <label class="small fw-bold">Observaciones adicionales</label>
                <textarea name="Message" class="form-control w-100" rows="2"></textarea>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg shadow">Confirmar Reserva</button>
            </div>
        </form>
        <div id="formMessage-@Model.IdItem" class="mt-3 text-center" style="display:none;"></div>
    </div>
</div>

<style>
    .ultra-small {
        font-size: 0.75rem;
        display: block;
        margin-bottom: 2px;
    }
    /* Forzamos que el formulario y sus hijos directos no se peguen a la izquierda */
    #consultaMailForm {
        width: 100%;
        margin: 0 auto;
    }
</style>