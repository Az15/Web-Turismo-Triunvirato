@model Web_Turismo_Triunvirato.Models.BusPromotion

@{
    ViewData["Title"] = Model.Id == 0 ? "Alta de Promoción de Bus" : "Editar Promoción de Bus";
    var actionName = Model.Id == 0 ? "SubmitPromotionBus" : "EditPromotionBus";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="@actionName" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                @if (Model.Id > 0)
                {
                    <input type="hidden" asp-for="Id" />
                }
                <input type="hidden" asp-for="ServiceType" />
                <input type="hidden" asp-for="DiscountPercentage" />
                @* Campo oculto para la URL de la imagen existente, si no se sube una nueva *@
                <input type="hidden" asp-for="ImageUrl" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DestinationName" class="form-label"></label>
                        <input asp-for="DestinationName" class="form-control" />
                        <span asp-validation-for="DestinationName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="OriginName" class="form-label"></label>
                        <input asp-for="OriginName" class="form-control" />
                        <span asp-validation-for="OriginName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="BusCompanyName" class="form-label"></label>
                        <input asp-for="BusCompanyName" class="form-control" />
                        <span asp-validation-for="BusCompanyName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Whatsapp_Id" class="form-label">Mensaje de WhatsApp:</label>
                    <select asp-for="Whatsapp_Id" class="form-control" asp-items="ViewBag.WhatsappMessages">
                        <option value="">-- Seleccione un mensaje --</option>
                    </select>
                    <span asp-validation-for="Whatsapp_Id" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="ImageFile" class="form-label">Seleccionar Imagen</label>
                    <input type="file" id="ImageFile" name="ImageFile" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>


                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-3">
                        <img src="@Model.ImageUrl" alt="Imagen actual" class="img-thumbnail" style="max-height: 200px;" />
                    </div>
                }

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="OriginalPrice" class="form-label"></label>
                        <input asp-for="OriginalPrice" class="form-control" />
                        <span asp-validation-for="OriginalPrice" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="OfferPrice" class="form-label"></label>
                        <input asp-for="OfferPrice" class="form-control" />
                        <span asp-validation-for="OfferPrice" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive"></label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="IsHotWeek" />
                    <label class="form-check-label" asp-for="IsHotWeek"></label>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="AdminPromotionBuses" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}