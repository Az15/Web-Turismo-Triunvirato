@model Web_Turismo_Triunvirato.Models.BusPromotion

@{
    var action = Model.Id == 0 ? "SubmitPromotionBus" : "EditPromotionBus";
    ViewData["Title"] = Model.Id == 0 ? "Alta de Promoción de Bus" : "Editar Promoción de Bus";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="card p-4 shadow">
        <form asp-controller="Admin" asp-action="@action" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" id="ImageUrl" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="OriginName" class="form-label">Ciudad de Origen</label>
                    <input asp-for="OriginName" class="form-control" placeholder="Ej: Buenos Aires" />
                    <span asp-validation-for="OriginName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DestinationName" class="form-label">Ciudad de Destino</label>
                    <input asp-for="DestinationName" class="form-control" placeholder="Ej: Mendoza" />
                    <span asp-validation-for="DestinationName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="BusCompanyName" class="form-label">Empresa de Bus</label>
                    <input asp-for="BusCompanyName" class="form-control" placeholder="Ej: Chevallier" />
                    <span asp-validation-for="BusCompanyName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Whatsapp_Id" class="form-label">Mensaje de WhatsApp:</label>
                    <select asp-for="Whatsapp_Id" class="form-control" asp-items="ViewBag.WhatsappMessages">
                        <option value="">-- Seleccione un mensaje --</option>
                    </select>
                </div>
            </div>

            <!-- Galería de Imágenes (Lógica del Hotel adaptada) -->
            <div class="card bg-light mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Galería de Imágenes</h5>
                    <button type="button" class="btn btn-primary btn-sm" onclick="addImageInput()">
                        <i class="fas fa-plus"></i> Agregar otra foto
                    </button>
                </div>
                <div class="card-body">
                    <div id="image-upload-container" class="mb-3">
                        <div class="input-group mb-2">
                            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                            <span class="input-group-text"><i class="fas fa-image"></i></span>
                        </div>
                    </div>

                    @if (Model.ImagenesAdicionales != null && Model.ImagenesAdicionales.Any())
                    {
                        <div class="row">
                            @foreach (var img in Model.ImagenesAdicionales)
                            {
                                var uid = "img-" + img.Id;
                                bool esPortada = img.Url == Model.ImageUrl;

                                <div class="col-md-3 mb-3 text-center" id="card-@uid">
                                    <div class="card h-100 shadow-sm @(esPortada ? "border-warning" : "")">
                                        @if (esPortada)
                                        {
                                            <span class="position-absolute top-0 start-50 translate-middle badge rounded-pill bg-warning text-dark" style="z-index: 10;">
                                                PORTADA
                                            </span>
                                        }

                                        <img src="@img.Url" class="card-img-top img-thumbnail-gallery"
                                             style="height: 120px; object-fit: cover; cursor:pointer; @(esPortada ? "border: 3px solid #ffc107;" : "")"
                                             onclick="openZoom(this.src)" />

                                        <div class="card-footer d-flex justify-content-between p-1">
                                            @if (!esPortada)
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="markForDelete('@uid', '@img.Url')" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-sm btn-secondary disabled">
                                                    <i class="fas fa-lock"></i>
                                                </button>
                                            }

                                            <label class="btn btn-sm @(esPortada ? "btn-warning" : "btn-outline-info") mb-0" title="Reemplazar">
                                                <i class="fas fa-pencil-alt"></i>
                                                <input type="file" name="ReplacedFiles" style="display:none" onchange="previewReplace(this, '@uid', '@img.Url')" />
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <div id="hidden-delete-data"></div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="OriginalPrice" class="form-label">Precio Original</label>
                    <input asp-for="OriginalPrice" type="number" step="0.01" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="OfferPrice" class="form-label">Precio Oferta</label>
                    <input asp-for="OfferPrice" type="number" step="0.01" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Category" class="form-label">Categoría de Asiento</label>
                    <select asp-for="Category" class="form-control">
                        <option value="Semicama">Semicama</option>
                        <option value="Cama Ejecutivo">Cama Ejecutivo</option>
                        <option value="Cama Suite">Cama Suite</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Descripción del Servicio</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex gap-4 mb-4">
                <div class="form-check">
                    <input asp-for="IsHotWeek" class="form-check-input" />
                    <label asp-for="IsHotWeek" class="form-check-label">¿Es Hot Week?</label>
                </div>
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Publicar ahora</label>
                </div>
            </div>

            <div class="mt-4 border-top pt-3">
                <button type="submit" class="btn btn-success btn-lg"><i class="fas fa-save"></i> Guardar Promoción de Bus</button>
                <a asp-action="AdminPromotionBuses" class="btn btn-secondary btn-lg">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<!-- Overlay para Zoom -->
<div id="zoomOverlay" onclick="closeZoom()" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.8); z-index:9999; justify-content:center; align-items:center; cursor:zoom-out;">
    <img id="zoomImg" style="max-width:90%; max-height:90%; border:3px solid white; border-radius: 8px;" />
</div>

@section Scripts {
    <script>
        function openZoom(src) {
            document.getElementById('zoomImg').src = src;
            document.getElementById('zoomOverlay').style.display = 'flex';
        }
        function closeZoom() {
            document.getElementById('zoomOverlay').style.display = 'none';
        }

        function markForDelete(uid, url) {
            if (!confirm("¿Deseas marcar esta imagen para eliminar?")) return;
            const card = document.getElementById('card-' + uid);
            card.style.opacity = '0.3';
            card.style.filter = 'grayscale(1)';
            card.style.pointerEvents = 'none';

            const hiddenArea = document.getElementById('hidden-delete-data');
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'DeletedImagesUrls';
            input.value = url;
            hiddenArea.appendChild(input);
        }

        function previewReplace(input, uid, oldUrl) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const card = document.getElementById(`card-${uid}`);
                    const imgElement = card.querySelector(`.img-thumbnail-gallery`);
                    imgElement.src = e.target.result;
                    imgElement.style.border = "3px solid #0d6efd";
                };
                reader.readAsDataURL(input.files[0]);

                const hiddenArea = document.getElementById('hidden-delete-data');
                const hInput = document.createElement('input');
                hInput.type = 'hidden';
                hInput.name = 'ReplacedImagesUrls';
                hInput.value = oldUrl;
                hiddenArea.appendChild(hInput);
            }
        }

        function addImageInput() {
            const container = document.getElementById('image-upload-container');
            const div = document.createElement('div');
            div.className = 'input-group mb-2';
            div.innerHTML = `
                        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                        <button type="button" class="btn btn-danger" onclick="this.parentElement.remove()"><i class="fas fa-minus"></i></button>
                    `;
            container.appendChild(div);
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}