@model Web_Turismo_Triunvirato.Models.BusPromotion

@{
    var action = Model.Id == 0 ? "SubmitPromotionBus" : "EditPromotionBus";
    ViewData["Title"] = Model.Id == 0 ? "Alta de Promoción de Bus" : "Editar Promoción de Bus";
}
<link rel="stylesheet" href="~/css/imagenDetail.css" />

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="card p-4 shadow">
        <form asp-controller="Admin" asp-action="@action" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" id="packageForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ServiceType" />
            <input type="hidden" asp-for="DiscountPercentage" />
            <input type="hidden" asp-for="ImageUrl" />

            <!-- Inputs ocultos para enviar info de borrado al controlador -->
            <div id="hidden-delete-data"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="OriginName" class="form-label">Ciudad de Origen</label>
                    <input asp-for="OriginName" class="form-control" placeholder="Ej: Buenos Aires" />
                    <span asp-validation-for="OriginName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DestinationName" class="form-label">Ciudad de Destino</label>
                    <input asp-for="DestinationName" class="form-control" placeholder="Ej: Mendoza" />
                    <span asp-validation-for="DestinationName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="BusCompanyName" class="form-label">Empresa de Bus</label>
                    <input asp-for="BusCompanyName" class="form-control" placeholder="Ej: Chevallier" />
                    <span asp-validation-for="BusCompanyName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Whatsapp_Id" class="form-label">Mensaje de WhatsApp:</label>
                    <select asp-for="Whatsapp_Id" class="form-control" asp-items="ViewBag.WhatsappMessages">
                        <option value="">-- Seleccione un mensaje --</option>
                    </select>
                    <span asp-validation-for="Whatsapp_Id" class="text-danger"></span>
                </div>
            </div>

            <!-- Galería de Imágenes (Lógica del Hotel adaptada) -->
            
             @*    <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Galería de Imágenes</h5>
                    <button type="button" class="btn btn-primary btn-sm" onclick="addImageInput()">
                        <i class="fas fa-plus"></i> Agregar otra foto
                    </button>
                </div>
 *@

                    <!-- GALERÍA MEJORADA -->
                    @if (Model.Id > 0 && Model.ImagenesAdicionales != null && Model.ImagenesAdicionales.Any())
                    {
                        <div class="mb-4">
                            <label class="form-label fw-bold">Imágenes actuales (Click para ampliar):</label>
                            <div class="d-flex flex-wrap gap-4">
                                @foreach (var img in Model.ImagenesAdicionales)
                                {
                                    var uniqueId = Guid.NewGuid().ToString().Substring(0, 5);
                                    <div class="img-card-container" id="card-@uniqueId">
                                        <div class="img-actions-overlay">
                                            <button type="button" class="btn-img-edit" title="Reemplazar" onclick="showReplaceInput('@uniqueId', '@img.Url')">✎</button>
                                            <button type="button" class="btn-img-x" title="Eliminar" onclick="markForDelete('@uniqueId', '@img.Url')">×</button>
                                        </div>

                                        <img src="@Url.Content(img.Url)" class="img-thumbnail-gallery" onclick="openZoom(this.src)">

                                        @if (img.Url == Model.ImageUrl)
                                        {
                                            <div class="badge bg-primary d-block mt-1">Portada</div>
                                        }

                                        <div id="replace-box-@uniqueId" class="replace-input-area" style="display:none;">
                                            <label class="small fw-bold">Nueva imagen:</label>
                                            <input type="file" name="ReplacedFiles" class="form-control form-control-sm" onchange="previewReplace(this, '@uniqueId')" />
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="form-group mb-3">
                        <label class="form-label d-block fw-bold">Subir nuevas imágenes</label>
                        <div id="image-upload-container">
                            <div class="input-group mb-2">
                                <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                                <button type="button" class="btn btn-success" onclick="addImageInput()">+</button>
                            </div>
                        </div>
                        <small class="text-muted">Si subes imágenes nuevas, la primera reemplazará la portada actual.</small>
                    </div>

                
           

      

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="OriginalPrice" class="form-label">Precio Original</label>
                    <input asp-for="OriginalPrice" type="number" step="0.01" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="OfferPrice" class="form-label">Precio Oferta</label>
                    <input asp-for="OfferPrice" type="number" step="0.01" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Category" class="form-label">Categoría de Asiento</label>
                    <select asp-for="Category" class="form-control">
                        <option value="Semicama">Semicama</option>
                        <option value="Cama Ejecutivo">Cama Ejecutivo</option>
                        <option value="Cama Suite">Cama Suite</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Descripción del Servicio</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex gap-4 mb-4">
                <div class="form-check">
                    <input asp-for="IsHotWeek" class="form-check-input" />
                    <label asp-for="IsHotWeek" class="form-check-label">¿Es Hot Week?</label>
                </div>
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Publicar ahora</label>
                </div>
            </div>

            <div class="mt-4 border-top pt-3">
                <button type="submit" class="btn btn-success btn-lg"><i class="fas fa-save"></i> Guardar Promoción de Bus</button>
                <a asp-action="AdminPromotionBuses" class="btn btn-secondary btn-lg">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<!-- MODAL ZOOM -->
<div id="zoomOverlay" class="image-zoom-overlay" onclick="closeZoom()">
    <img id="zoomImg" src="" />
</div>

@section Scripts {
    <script>
        // --- ZOOM ---
        function openZoom(src) {
            document.getElementById('zoomImg').src = src;
            document.getElementById('zoomOverlay').style.display = 'flex';
        }
        function closeZoom() {
            document.getElementById('zoomOverlay').style.display = 'none';
        }

        // --- BORRAR ---
        function markForDelete(uid, url) {
            if (!confirm("¿Deseas marcar esta imagen para eliminar?")) return;
            document.getElementById('card-' + uid).classList.add('marked-deleted');

            const hiddenArea = document.getElementById('hidden-delete-data');
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'DeletedImagesUrls';
            input.value = url;
            hiddenArea.appendChild(input);
        }

        // --- REEMPLAZAR ---
        function showReplaceInput(uid, oldUrl) {
            document.getElementById('replace-box-' + uid).style.display = 'block';

            const hiddenArea = document.getElementById('hidden-delete-data');

            // Evitar duplicados si hacen clic varias veces
            if (!hiddenArea.querySelector(`input[value="${oldUrl}"][name="ReplacedImagesUrls"]`)) {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'ReplacedImagesUrls';
                input.value = oldUrl;
                hiddenArea.appendChild(input);
            }
        }

        function previewReplace(input, uid) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const imgElement = document.querySelector(`#card-${uid} .img-thumbnail-gallery`);
                    const oldUrl = imgElement.getAttribute('src').replace(/^.*[\\\/]/, '/img/promocionespaquetes/');
                    // Nota: La lógica de arriba es simplificada, mejor capturamos la URL real antes de cambiar el src

                    const currentPortada = document.getElementById('ImageUrl').value;

                    imgElement.src = e.target.result;
                    imgElement.style.border = "3px solid #0d6efd";
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // --- AGREGAR NUEVAS ---
        function addImageInput() {
            const container = document.getElementById('image-upload-container');
            const row = document.createElement('div');
            row.className = 'input-group mb-2';
            row.innerHTML = `
                                <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                                <button type="button" class="btn btn-danger" onclick="this.parentElement.remove()">-</button>
                            `;
            container.appendChild(row);
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}