@model IEnumerable<Web_Turismo_Triunvirato.Models.FlightPromotion>

@{
    ViewData["Title"] = "Promociones de Vuelos";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    @* No incluimos el ServiceType aquí porque ya sabemos que son vuelos *@
                    <th>Descripción</th>
                    <th>Destino</th>
                    <th>Origen</th>
                    <th>Precio Original</th>
                    <th>Precio Oferta</th>
                    <th>Descuento Total</th>
                    <th>Inicio</th>
                    <th>Fin</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.DestinationName)</td>
                        <td>@Html.DisplayFor(modelItem => item.OriginName)</td>
                        <td>@item.OriginalPrice.ToString("C", new System.Globalization.CultureInfo("es-AR"))</td> @* Formato de moneda *@
                        <td>@item.OfferPrice.ToString("C", new System.Globalization.CultureInfo("es-AR"))</td> @* Formato de moneda *@
                        <td>@item.DiscountPercentage.ToString("F2")%</td> @* 2 decimales y signo de porcentaje *@
                        <td>@item.StartDate.ToShortDateString()</td>
                        <td>@item.EndDate.ToShortDateString()</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <i class="bi bi-check-lg text-success"></i>
                            }
                            else
                            {
                                <i class="bi bi-x-lg text-danger"></i>
                            }
                        </td>
                        <td>
                            <a asp-action="EditPromotionFlight" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a>
                            <form asp-controller="Admin" asp-action="DeletePromotionFlight" method="post" style="display:inline-block;">
                                <input type="hidden" name="id" value="@item.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar esta promoción?');">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-3">
            No hay promociones de vuelos disponibles para modificar.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Vuelos" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a Administración de Vuelos</a>
    </div>
</div>