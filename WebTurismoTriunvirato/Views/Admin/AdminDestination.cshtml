@model IEnumerable<Web_Turismo_Triunvirato.Models.View_Index_Destination>

@{
    ViewData["Title"] = "Administrar Promociones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Administrar Promociones de la Página Principal</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="bg-primary text-white">
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Imagen</th>
                    <th>Precio</th>
                    <th>Origen</th>
                    <th>Tipo de Viaje</th>
                    <th>Hot Week</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>
                            <img src="@Url.Content(item.PictureDestiny)" alt="@item.Title" style="width: 100px; height: auto;" />
                        </td>
                        <td>@item.Price.ToString("C0")</td>
                        <td>@item.From</td>
                        <td>@item.TripType</td>
                        <td>
                            <span class="badge @(item.IsHotWeek ? "bg-danger" : "bg-secondary")">
                                @(item.IsHotWeek ? "Sí" : "No")
                            </span>
                        </td>
                        <td>
                            <a asp-action="EditDestination" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <form asp-action="ToggleDestinationStatus" asp-route-id="@item.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm @(item.IsHotWeek ? "btn-danger" : "btn-success")">
                                    <i class="fas fa-power-off"></i> @(item.IsHotWeek ? "Desactivar" : "Activar")
                                </button>
                            </form>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">No hay promociones para mostrar.</div>
    }
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Volver al Panel de Administración</a>
    </div>
</div>