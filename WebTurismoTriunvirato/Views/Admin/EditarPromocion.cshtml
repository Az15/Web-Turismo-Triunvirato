@model Web_Turismo_Triunvirato.Models.Promotion

@{
    ViewData["Title"] = "Editar Promoción"; // Cambié el título a "Editar Promoción" para ser consistente
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="card p-4">
        <form asp-action="EditPromotionFlight" method="post">
            @* <--- ASEGÚRATE DE QUE SEA 'EditarPromocion' *@
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ServiceType" /> @* Mantenemos el ServiceType oculto *@

            <div class="mb-3">
                <label asp-for="ServiceType" class="form-label">Tipo de Servicio:</label>
                <input asp-for="ServiceType" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DestinationName" class="form-label"></label>
                <input asp-for="DestinationName" class="form-control" />
                <span asp-validation-for="DestinationName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="OriginName" class="form-label"></label>
                <input asp-for="OriginName" class="form-control" />
                <span asp-validation-for="OriginName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsHotWeek" type="checkbox" class="form-check-input" />
                <label asp-for="IsHotWeek" class="form-check-label"></label>
            </div>

            <hr />

            <div class="mb-3">
                <label asp-for="OriginalPrice" class="form-label"></label>
                <input asp-for="OriginalPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="OriginalPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="OfferPrice" class="form-label"></label>
                <input asp-for="OfferPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="OfferPrice" class="text-danger"></span>
            </div>
            @* El DiscountPercentage se calcula automáticamente, no necesita campo de entrada *@
            @* <div class="mb-3">
            <label asp-for="DiscountPercentage" class="form-label"></label>
            <input asp-for="DiscountPercentage" type="number" step="0.01" class="form-control" readonly />
            </div> *@
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar Cambios</button>
            <a asp-action="GestionarPromocionesVuelos" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a Promociones de Vuelos</a> @* <-- ENLACE DE VOLVER A LA LISTA DE VUELOS *@
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}