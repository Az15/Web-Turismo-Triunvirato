@* Archivo: Views/Admin/Activities.cshtml *@

@{
    ViewData["Title"] = "Administración de Actividades";
}

<h2 class="mt-4">@ViewData["Title"]</h2>
<p>Desde aquí gestionarás las actividades, precios y promociones.</p>

<div class="row mt-4">
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm text-center">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <a asp-controller="Admin" asp-action="AltaActividad" class="text-decoration-none d-block w-100 h-100 d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-plus-circle fa-4x text-success mb-3"></i>
                    <h5 class="card-title text-dark">Alta de Actividades</h5>
                    <p class="card-text text-muted">Agrega nuevas actividades y sus detalles.</p>
                </a>
            </div>
        </div>
    </div>

    @* Botón para Gestionar/Modificar Actividades *@
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm text-center">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <a asp-controller="Admin" asp-action="AdminActivities" class="text-decoration-none d-block w-100 h-100 d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-pencil-alt fa-4x text-primary mb-3"></i>
                    <h5 class="card-title text-dark">Modificar Actividades</h5>
                    <p class="card-text text-muted">Edita o elimina actividades existentes.</p>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm text-center">
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <a asp-controller="Admin" asp-action="AdminActivities" class="text-decoration-none d-block w-100 h-100 d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-list fa-4x text-secondary mb-3"></i>
                    <h5 class="card-title text-dark">Ver Todas las Actividades</h5>
                    <p class="card-text text-muted">Lista todas las actividades.</p>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver al Panel de Administración</a>
</div>
