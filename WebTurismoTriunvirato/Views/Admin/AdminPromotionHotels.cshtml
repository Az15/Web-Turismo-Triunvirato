@using Web_Turismo_Triunvirato.Models
@model IEnumerable<dynamic>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Gestionar Promociones";
    var promotionType = Model.FirstOrDefault()?.GetType();
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <p>
        @if (promotionType == typeof(FlightPromotion))
        {
            <a asp-action="AltaPromocion" class="btn btn-success">Crear Nueva Promoción de Vuelo</a>
        }
        else if (promotionType == typeof(HotelPromotion))
        {
            <a asp-action="AltaPromotionHotel" class="btn btn-success">Crear Nueva Promoción de Hotel</a>
        }
        else
        {
            <a asp-action="AltaPromocion" class="btn btn-success">Crear Nueva Promoción</a>
        }
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                @* <th>Tipo de Servicio</th> *@
                <th>Descripción</th>
                <th>Destino</th>
                @if (promotionType == typeof(FlightPromotion))
                {
                    <th>Origen</th>
                }
                else if (promotionType == typeof(HotelPromotion))
                {
                    <th>Estrellas</th>
                }
                <th>Precio Original</th>
                <th>Precio Oferta</th>
                <th>Descuento</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* <td>@item.ServiceType</td> *@
                    <td>@item.Description</td>
                    <td>@item.DestinationName</td>
                    @if (item is FlightPromotion)
                    {
                        <td>@item.OriginName</td>
                    }
                    else if (item is HotelPromotion)
                    {
                        @* <td>@item.HotelName</td> *@
                        <td>@item.Stars</td>
                    }
                    <td>@item.OriginalPrice.ToString("C", new System.Globalization.CultureInfo("es-AR"))</td>
                    <td>@item.OfferPrice.ToString("C", new System.Globalization.CultureInfo("es-AR"))</td>
                    <td>@item.DiscountPercentage%</td>
                    <td>@item.StartDate.ToString("d")</td>
                    <td>@item.EndDate.ToString("d")</td>
                    <td>@(item.IsActive ? "Sí" : "No")</td>
                    <td>
                        @if (item is FlightPromotion)
                        {
                            <a asp-action="EditPromotionFlight" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a>
                            <form asp-controller="Admin" asp-action="DeletePromotionFlight" method="post" style="display:inline-block;">
                                <input type="hidden" name="id" value="@item.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar esta promoción?');">Eliminar</button>
                            </form>
                        }
                        else if (item is HotelPromotion)
                        {
                            <a asp-action="EditPromotionHotel" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a>
                            <form asp-controller="Admin" asp-action="DeletePromotionHotel" method="post" style="display:inline-block;">
                                <input type="hidden" name="id" value="@item.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar esta promoción?');">Eliminar</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-4">
        @if (promotionType == typeof(FlightPromotion))
        {
            <a asp-action="Vuelos" class="btn btn-secondary">Volver a Vuelos</a>
        }
        else if (promotionType == typeof(HotelPromotion))
        {
            <a asp-action="Hoteles" class="btn btn-secondary">Volver a Hoteles</a>
        }
        else
        {
            <a asp-action="Index" class="btn btn-secondary">Volver al Panel</a>
        }
    </div>
</div>