@model IEnumerable<Web_Turismo_Triunvirato.Models.HotelPromotion>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Gestionar Promociones";
    var promotionType = Model.FirstOrDefault()?.GetType();
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <p>
            <a asp-action="AltaPromotionHotel" class="btn btn-success">Crear Nueva Promoción de Hotel</a>

    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Destino</th>
                <th>Nombre Hotel</th>
                <th>Precio Original</th>
                <th>Precio Oferta</th>
                <th>Descuento</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Estrellas</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* <td>@item.ServiceType</td> *@
                    <td>@item.Description</td>
                    <td>@item.DestinationName</td>
                    <td>@item.HotelName</td>
                    <td>@item.OriginalPrice.ToString("C", new System.Globalization.CultureInfo("es-AR"))</td>
                    <td>@item.OfferPrice.ToString("C", new System.Globalization.CultureInfo("es-AR"))</td>
                    <td>@item.DiscountPercentage%</td>
                    <td>@item.StartDate.ToString("d")</td>
                    <td>@item.EndDate.ToString("d")</td>
                    <td>@item.Stars</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <i class="bi bi-check-lg text-success"></i>
                        }
                        else
                        {
                            <i class="bi bi-x-lg text-danger"></i>
                        }
                    </td>
                    <td>
                       
                            <a asp-action="EditPromotionHotel" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a>
                            <form asp-controller="Admin" asp-action="DeletePromotionHotel" method="post" style="display:inline-block;">
                                <input type="hidden" name="id" value="@item.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar esta promoción?');">Eliminar</button>
                            </form>
                        
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-4">

            <a asp-action="Hoteles" class="btn btn-secondary">Volver aa Hoteles</a>
 

    </div>
</div>